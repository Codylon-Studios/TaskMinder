{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["../node_modules/@types", "src/**/*"],
    "moduleResolution": "Node",
    "allowJs": true,
    "lib": ["dom"],
    "isolatedModules": true
  },
  "include": ["src/**/*"],
}
