{
  "name": "taskminder",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "echo \"no test specified, passing anyway (for now)\" && exit 0",
    "build:server": "redis-cli -h redis FLUSHALL && nodemon backend/dist/server.js",
    "build:docs": "mkdocs build --config-file=docs/mkdocs.yml",
    "build:be": "npm run build:be:copy && npm run build:be:tsc",
    "build:be:tsc": "tsc -p backend",
    "build:be:copy": "node copyFiles.js backend/src backend/dist",
    "build:fe": "npm run build:fe:copy && npm run build:fe:html && npm run build:fe:scss && npm run build:fe:tsc",
    "build:fe:html": "node frontend/buildHtml.js frontend/src frontend/dist",
    "build:fe:scss": "sass frontend/src:frontend/dist",
    "build:fe:tsc": "tsc -p frontend",
    "build:fe:copy": "node copyFiles.js frontend/src frontend/dist",
    "build:prepare": "npm run build:docs && npm run build:be && npm run build:fe",
    "build": "npm run build:prepare && npm run build:server",
    "dev:server": "nodemon backend/dist/server.js --watch backend/dist",
    "dev:docs": "chokidar 'docs/src/**/*' -c 'source venv/bin/activate && mkdocs build --config-file=docs/mkdocs.yml'",
    "dev:be": "concurrently -n 'copy,tsc' \"npm run dev:be:copy\" \"npm run dev:be:tsc\"",
    "dev:be:tsc": "tsc -p backend --watch --incremental",
    "dev:be:copy": "chokidar 'backend/src/**/*' -c 'node copyFiles.js backend/src backend/dist'",
    "dev:fe": "concurrently -n 'copy,html,scss,tsc' \"npm run dev:fe:copy\" \"npm run dev:fe:html\" \"npm run dev:fe:scss\" \"npm run dev:fe:tsc\"",
    "dev:fe:html": "chokidar 'frontend/src/**/*.html' -c 'node frontend/buildHtml.js frontend/src frontend/dist'",
    "dev:fe:scss": "sass frontend/src:frontend/dist --watch --no-source-map",
    "dev:fe:tsc": "tsc -p frontend --watch --incremental",
    "dev:fe:copy": "chokidar 'frontend/src/**/*' -c 'node copyFiles.js frontend/src frontend/dist'",
    "dev:start": "concurrently -n 'docs,backend,frontend,server' \"npm run dev:docs\" \"npm run dev:be\" \"npm run dev:fe\" \"npm run dev:server\"",
    "dev": "npm run dev:start",
    "dev-build": "npm run build:prepare && npm run dev:start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bootstrap": "^5.2.10",
    "@types/compression": "^1.7.5",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/jquery": "^3.5.32",
    "@types/multer": "^1.4.12",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.14",
    "@types/socket.io": "^3.0.1",
    "ajv": "^8.17.1",
    "axios": "^1.8.3",
    "bcrypt": "^5.1.1",
    "bootstrap": "^5.3.5",
    "braces": "^3.0.3",
    "cheerio": "^1.0.0",
    "chokidar": "^4.0.3",
    "chokidar-cli": "^3.0.0",
    "compression": "^1.8.0",
    "concurrently": "^9.1.2",
    "connect-pg-simple": "^10.0.0",
    "dompurify": "^3.2.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "iconv-lite": "^0.6.3",
    "jquery": "^3.7.1",
    "jsdom": "^26.0.0",
    "multer": "^2.0.0",
    "ncp": "^2.0.0",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.9",
    "pg": "^8.14.1",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0",
    "sass": "^1.86.3",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "tree-kill": "^1.2.2",
    "validator": "^13.15.0",
    "zod": "^3.24.3"
  }
}
