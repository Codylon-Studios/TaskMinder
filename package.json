{
  "name": "taskminder",
  "version": "1.0.0",
  "description": "",
  "main": "backend/dist/server.js",
  "scripts": {
    "test": "echo \"no test specified, passing anyway (for now)\" && exit 0",
    "lint:eslint": "eslint --fix .",
    "lint:prettier": "prettier --write 'frontend/src/**/*.html'",
    "lint": "bun run lint:eslint; bun run lint:prettier",
    "build:be": "bun run build:be:copy && bun run build:be:tsc",
    "build:be:tsc": "tsc -p backend",
    "build:be:copy": "bun copyFiles.js backend/src backend/dist",
    "build:fe": "bun run build:fe:copy && bun run build:fe:html && bun run build:fe:scss && bun run build:fe:tsc",
    "build:fe:html": "bun frontend/buildHtml.js frontend/src frontend/dist",
    "build:fe:scss": "sass frontend/src:frontend/dist",
    "build:fe:tsc": "tsc -p frontend",
    "build:fe:copy": "bun copyFiles.js frontend/src frontend/dist",
    "build": "bun run build:fe && bun run build:be",
    "dev:server": "bun --watch backend/dist/server.js",
    "dev:be": "concurrently -n 'copy,tsc' \"bun run dev:be:copy\" \"bun run dev:be:tsc\"",
    "dev:be:tsc": "tsc -p backend --watch --incremental",
    "dev:be:copy": "chokidar 'backend/src/**/*' -c 'bun copyFiles.js backend/src backend/dist'",
    "dev:fe": "concurrently -n 'copy,html,scss,tsc' \"bun run dev:fe:copy\" \"bun run dev:fe:html\" \"bun run dev:fe:scss\" \"bun run dev:fe:tsc\"",
    "dev:fe:html": "chokidar 'frontend/src/**/*.html' 'frontend/buildHtml.js' -c 'bun frontend/buildHtml.js frontend/src frontend/dist'",
    "dev:fe:scss": "sass frontend/src:frontend/dist --watch --no-source-map",
    "dev:fe:tsc": "tsc -p frontend --watch --incremental",
    "dev:fe:copy": "chokidar 'frontend/src/**/*' -c 'bun copyFiles.js frontend/src frontend/dist'",
    "dev:start": "concurrently -n 'backend,frontend,server' \"bun run dev:be\" \"bun run dev:fe\" \"bun run dev:server\"",
    "dev": "bun run dev:start",
    "dev-build": "bun run build && bun run dev:start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "1.12.2",
    "bcrypt": "6.0.0",
    "bootstrap": "5.3.8",
    "cheerio": "1.1.2",
    "chokidar": "4.0.3",
    "chokidar-cli": "3.0.0",
    "concurrently": "9.2.1",
    "connect-pg-simple": "10.0.0",
    "dotenv": "17.2.2",
    "express": "5.1.0",
    "express-async-handler": "1.2.0",
    "express-rate-limit": "8.1.0",
    "express-session": "1.18.2",
    "fs-extra": "11.3.2",
    "helmet": "8.1.0",
    "iconv-lite": "0.7.0",
    "jquery": "3.7.1",
    "multer": "2.0.2",
    "node-cron": "4.2.1",
    "pg": "8.16.3",
    "prettier": "3.6.2",
    "prisma": "6.16.2",
    "prom-client": "15.1.3",
    "redis": "5.8.2",
    "sass": "1.92.1",
    "socket.io": "4.8.1",
    "validator": "13.15.15",
    "zod": "4.1.9"
  },
  "devDependencies": {
    "@eslint/js": "9.35.0",
    "@prisma/client": "6.16.2",
    "@types/bcrypt": "6.0.0",
    "@types/bootstrap": "5.2.10",
    "@types/bun": "1.2.22",
    "@types/connect-pg-simple": "7.0.3",
    "@types/express": "5.0.3",
    "@types/express-session": "1.18.2",
    "@types/jquery": "3.5.33",
    "@types/multer": "2.0.0",
    "@types/node-cron": "3.0.11",
    "@types/pg": "8.15.5",
    "@types/qrcode": "1.5.5",
    "@types/qs": "6.14.0",
    "@types/socket.io": "3.0.2",
    "@types/validator": "13.15.3",
    "eslint": "9.35.0",
    "eslint-plugin-import": "2.32.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.0"
  },
  "private": true
}
