    "@prisma/client": "^6.9.0",
    "@types/bcrypt": "^5.0.2",
    "@types/bootstrap": "^5.2.10",
    "@types/compression": "^1.8.0",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.2",
    "@types/express-session": "^1.18.1",
    "@types/jquery": "^3.5.32",
    "@types/multer": "^1.4.12",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.4",
    "@types/socket.io": "^3.0.1",
    "@types/validator": "^13.15.1",
    "ajv": "^8.17.1",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bootstrap": "^5.3.6",
    "cheerio": "^1.0.0",
    "chokidar": "^4.0.3",
    "chokidar-cli": "^3.0.0",
    "compression": "^1.8.0",
    "concurrently": "^9.1.2",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.0",
