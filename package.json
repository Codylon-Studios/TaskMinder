    "iconv-lite": "^0.6.3",
    "jquery": "^3.7.1",
    "multer": "^2.0.1",
    "node-cron": "^4.0.7",
    "nodemon": "^3.1.10",
    "pg": "^8.16.0",
    "prisma": "^6.9.0",
    "prom-client": "^15.1.3",
    "redis": "^5.5.6",
    "sass": "^1.89.1",
    "socket.io": "^4.8.1",
    "validator": "^13.15.15",
    "zod": "^3.25.55"
  },
