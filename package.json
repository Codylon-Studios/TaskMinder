{
  "name": "taskminder",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build:server": "redis-cli -h redis FLUSHALL && nodemon backend/dist/server.js",
    "build:docs": "mkdocs build --config-file=docs/mkdocs.yml",
    "build:backend": "npm run build:backend:copy && npm run build:backend:tsc",
    "build:backend:tsc": "tsc -p backend",
    "build:backend:copy": "node copyFiles.js backend/src backend/dist",
    "build:frontend": "npm run build:frontend:copy && npm run build:frontend:scss",
    "build:frontend:scss": "sass frontend/src:frontend/dist",
    "build:frontend:copy": "node copyFiles.js frontend/src frontend/dist",
    "build:prepare": "npm run build:docs && npm run build:backend && npm run build:frontend && npm run build:server",
    "build": "npm run build:prepare && npm run build:server",

    "dev:server": "nodemon backend/dist/server.js --watch backend/dist",
    "dev:docs": "chokidar 'docs/src/**/*' -c 'mkdocs build --config-file=docs/mkdocs.yml'",
    "dev:backend": "concurrently -n 'copy,tsc' \"npm run dev:backend:copy\" \"npm run dev:backend:tsc\"",
    "dev:backend:tsc": "tsc -p backend --watch --incremental",
    "dev:backend:copy": "chokidar 'backend/src/**/*' -c 'node copyFiles.js backend/src backend/dist'",
    "dev:frontend": "concurrently -n 'copy,scss' \"npm run dev:frontend:copy\" \"npm run dev:frontend:scss\"",
    "dev:frontend:scss": "sass frontend/src:frontend/dist --watch --no-source-map",
    "dev:frontend:copy": "chokidar 'frontend/src/**/*' -c 'node copyFiles.js frontend/src frontend/dist'",
    "dev:start": "concurrently -n 'docs,backend,frontend,server' \"npm run dev:docs\" \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:server\"",
    "dev": "npm run dev:start",

    "dev-build": "npm run build:prepare && npm run dev:start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/multer": "^1.4.12",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.14",
    "@types/socket.io": "^3.0.1",
    "ajv": "^8.17.1",
    "axios": "^1.8.3",
    "bcrypt": "^5.1.1",
    "bootstrap": "^5.3.5",
    "braces": "^3.0.3",
    "cheerio": "^1.0.0",
    "chokidar": "^4.0.3",
    "chokidar-cli": "^3.0.0",
    "compression": "^1.8.0",
    "concurrently": "^9.1.2",
    "connect-pg-simple": "^10.0.0",
    "dompurify": "^3.2.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "iconv-lite": "^0.6.3",
    "jquery": "^3.7.1",
    "jsdom": "^26.0.0",
    "multer": "^1.4.5-lts.2",
    "ncp": "^2.0.0",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.9",
    "pg": "^8.14.1",
    "redis": "^4.7.0",
    "sass": "^1.86.3",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "tree-kill": "^1.2.2",
    "validator": "^13.15.0",
    "zod": "^3.24.3"
  }
}
