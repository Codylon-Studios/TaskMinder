    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "@types/bun": "latest"
  },
  "private": true
}
