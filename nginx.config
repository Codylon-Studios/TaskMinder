#=======================================================================
# FINAL AND CORRECTED NGINX CONFIGURATION FOR TASKMINDER.DE
#
# IMPORTANT: MODIFY THIS CONFIGURATION FOR YOUR OWN DOMAIN
#
# 1. Replace all instances of "taskminder" with your actual domain name.
# 2. Update the certificate file paths (e.g., /etc/letsencrypt/live/...)
#    to match the location of your domainâ€™s SSL certificates.
#
# CERTBOT SETUP INSTRUCTIONS:
# - During Certbot and initial Nginx setup, use **only** the `listen 80` block.
# - After successfully obtaining certificates with Certbot,
#   remove the temporary configuration used for the setup.
# - Then, replace it with the full configuration provided below.
#
# CURRENT CONFIGURATION USES CERTIFICATES LOCATED AT:
# /etc/letsencrypt/live/monitoring.taskminder.de/
#=======================================================================

# 1. Redirect all HTTP traffic to HTTPS
server {
    listen 80;
    server_name taskminder.de www.taskminder.de monitoring.taskminder.de;

    # Important for Certbot renewals
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        allow all;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

# 2. Redirect www to non-www (on HTTPS)
server {
    listen 443 ssl http2;
    server_name www.taskminder.de;

    # SSL configuration using your existing certificate
    ssl_certificate /etc/letsencrypt/live/monitoring.taskminder.de/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/monitoring.taskminder.de/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    return 301 https://taskminder.de$request_uri;
}

# 3. Main Site (https://example.com)
server {
    listen 443 ssl http2;
    server_name taskminder.de;

    # SSL configuration using your existing certificate
    ssl_certificate /etc/letsencrypt/live/monitoring.taskminder.de/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/monitoring.taskminder.de/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    server_tokens off;
    client_max_body_size 20m;

    location / {
        proxy_pass http://localhost:3002;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400;
    }
}

# 4. Monitoring Site (https://monitoring.example.com)
server {
    listen 443 ssl http2;
    server_name monitoring.taskminder.de;

    # SSL configuration using your existing certificate
    ssl_certificate /etc/letsencrypt/live/monitoring.taskminder.de/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/monitoring.taskminder.de/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    # Security / Proxy Settings
    server_tokens off;
    client_max_body_size 20m;

    location / {
        proxy_pass http://localhost:3001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400;
    }
}